@model IEnumerable<MyBookLibrary.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm())
    {
    <p>
        ISBN: @Html.TextBox("searchISBN") 
        Title: @Html.TextBox("searchTitle") 
        Author: @Html.TextBox("searchAuthor") <br />
        <input type="submit" value="Filter" />
    </p>
    }
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isAvailable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.isAvailable)
        </td>
        <td>  
            @if (item.isAvailable)
            {
                @Html.ActionLink("Borrow", "Borrow", new { id = item.ID }) 
            }
            else
            { 
                @Html.ActionLink("Return", "Return", new { id = item.ID }) 
            }
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
